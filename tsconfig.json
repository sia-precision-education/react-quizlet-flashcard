{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["src/**/*", "vite.config.ts", ".ladle/**/*", "src/**/*.stories.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.tsx"
  ]
}
